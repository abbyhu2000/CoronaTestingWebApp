<% layout('layouts/boilerplate') %>
    <div class="row">
        <h1 class="text-center">Edit Testing Site</h1>
        <div class="col-6 offset-3">
            <form action="/testingsites/<%=testingsite._id%>?_method=PUT" method="POST">
                <div class="mb-3">
                    <label class="form-label" for="title">Title</label>
                    <input class="form-control" type="text" id="title" name="testingsite[title]"
                        value="<%=testingsite.title %>">
                </div>
                <div class="mb-3">
                    <label class="form-label" for="location">Location</label>
                    <input class="form-control" type="text" id="location" name="testingsite[location]"
                        value="<%=testingsite.location %>">
                </div>
                <div class="mb-3">
                    <label class="form-label" for="image">Image Url</label>
                    <input class="form-control" type="text" id="image" name="testingsite[image]"
                        value="<%=testingsite.image %>">
                </div>
                <div class="mb-3">
                    <label class="form-label" for="price">Testing Price</label>
                    <div class="input-group">
                        <span class="input-group-text" id="price-label">$</span>
                        <input type="text" class="form-control" id="price" placeholder="0.00" aria-label="price"
                            aria-describedby="price-label" name="testingsite[price]" value="<%=testingsite.price %>">
                    </div>
                </div>

                <div class="mb-3">
                    <label class="form-label" for="description">Description</label>
                    <textarea class="form-control" type="text" id="description"
                        name="testingsite[description]"><%= testingsite.description%></textarea>
                </div>
                <div class="mb-3">
                    <button class="btn btn-info">Update Testing Site</button>
                </div>
            </form>
            <a href="/testingsites/<%= testingsite._id%>">Back To All Testing Sites</a>

        </div>
    </div>