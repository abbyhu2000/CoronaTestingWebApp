<% layout('layouts/boilerplate') %>
    <h1>All Testing Sites</h1>
    <div>
        <a href="/testingsites/new">Add Testing Site</a>
    </div>

    <% for (let testingsite of testingsites) {%>
        <div class="card" mb-3>
            <div class="row">
                <div class="col-md-4">
                    <img class="img-fluid" alt="" src="<%=testingsite.images[0].url%>">
                </div>
                <div class="col-mg-8">
                    <div class="card-body">
                        <h5 class="card-title">
                            <%=testingsite.title %>
                        </h5>
                        <p class="card-text">
                            <%=testingsite.description %>
                        </p>
                        <p class="card-text">
                            <small class="text-muted">
                                <%=testingsite.location %>
                            </small>
                        </p>
                        <a class="btn btn-primary" href="/testingsites/<%=testingsite._id %> ">View Details</a>
                    </div>
                </div>
            </div>
        </div>
        <% } %>